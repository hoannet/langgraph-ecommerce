# LLM Provider Selection
# Options: 'lm_studio', 'gemini', or 'openai'
LLM_PROVIDER=lm_studio

# LM Studio Configuration
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL_NAME=local-model
LM_STUDIO_API_KEY=not-needed

# Google Gemini Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-pro

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL_NAME=gpt-4o-mini

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Application Settings
APP_NAME=LangGraph Chatbot
APP_VERSION=0.1.0
LOG_LEVEL=INFO

# Paths
DATA_DIR=./data
CHECKPOINT_DIR=./data/checkpoints
LOG_DIR=./data/logs

# Memory Settings
MAX_CONVERSATION_HISTORY=20
CONVERSATION_SUMMARY_THRESHOLD=15

# Payment Settings (Mock)
PAYMENT_MOCK_MODE=true
PAYMENT_TIMEOUT=30

# MongoDB Settings
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=langgraph_ecommerce

# TiDB Vector Configuration
# Get connection string from: https://tidbcloud.com/
TIDB_CONNECTION_STRING=mysql+pymysql://user:password@gateway01.us-west-2.prod.aws.tidbcloud.com:4000/database?ssl_ca=/etc/ssl/cert.pem&ssl_verify_cert=true&ssl_verify_identity=true
TIDB_TABLE_NAME=documents
TIDB_EMBEDDING_DIMENSION=768
TIDB_DISTANCE_STRATEGY=cosine
TIDB_SEARCH_TOP_K=4

# Embedding Provider
# Options: 'openai', 'gemini', or 'lm_studio'
EMBEDDING_PROVIDER=lm_studio
LM_STUDIO_EMBEDDING_MODEL=google/embedding-gemma-300m

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_REQUEST_TIMEOUT=60
